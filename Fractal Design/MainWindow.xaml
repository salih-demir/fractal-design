            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="0,0,0,28" Height="15.96"><Run Text="Radius"/><LineBreak/><Run/></TextBlock>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="91.067,0,0,28" Height="15.96"><Run Text="Radius"/><Run Text=" 2"/><LineBreak/><Run/></TextBlock>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Precision" VerticalAlignment="Top" Margin="0,105.05,0,0"/>
            <Slider x:Name="smoothness" AutoToolTipPlacement="BottomRight" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="113.667" Maximum="50" Value="2" Minimum="1" Margin="76.9,103,0,0"/>
